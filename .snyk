# Phase 7-5: Snyk Policy Configuration
# Configure Snyk security scanning behavior

# Snyk (https://snyk.io) policy file, patches or ignores known vulnerabilities.
version: v1.25.0

# Language settings
language-settings:
  javascript:
    ignoreUnknownCA: false

# Patch configuration
patch: {}

# Ignore specific vulnerabilities (with justification)
ignore: {}

# Exclude paths from scanning
exclude:
  global:
    - '**/node_modules/**'
    - '**/dist/**'
    - '**/.next/**'
    - '**/coverage/**'
    - '**/test-results/**'
    - '**/playwright-report/**'
    - '**/*.test.ts'
    - '**/*.test.tsx'
    - '**/*.spec.ts'
    - '**/e2e/**'
    - '**/__tests__/**'
